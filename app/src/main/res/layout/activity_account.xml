<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Left streak -->
    <View
        android:id="@+id/left_streak"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:background="#F2D8C2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Right streak -->
    <View
        android:id="@+id/right_streak"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:background="#F2D8C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Box representing toolbar with text -->
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:text="My Account"
        android:textColor="#F2D8C2"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />


    <!--  //////////////////  -->

    <ImageView
        android:id="@+id/account_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/face2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:text="Your Name"
        android:padding="13dp"
        android:drawableLeft="@drawable/profile2"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_img"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".8"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/account_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:text="Your Email"
        android:padding="13dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_img"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".8"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/account_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:text="Your Password"
        android:inputType="textPassword"
        android:padding="13dp"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_img"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".8"
        android:layout_marginTop="180dp"/>





    <Button
        android:id="@+id/logout_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="-70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_password" />


    <!--  ////////////////////////////   -->


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/home"
        android:background="#40242E"/>

    <Button
        android:id="@+id/account"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:padding="15dp"
        android:drawableTop="@drawable/baseline_person_24"
        android:text="Account"
        android:textAllCaps="false"
        android:textColor="#F2D8C2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/home"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:padding="15dp"
        android:drawableTop="@drawable/home"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#F2D8C2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>